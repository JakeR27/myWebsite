<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title>MMR Tracker</title>
    <script src="../client-side-js/mmrtacker.js"></script>
    <style>
    <% if (borders) { %>
        * {
        outline: 3px black solid
        }
    <% } %>
    
    html,body{height:100%;}

    .bg-purple {
    background: rgb(48,0,50);
    }
    .bg-gray {
    background: rgb(74,74,74);
    }
    .bg-blue {
    background: rgb(50,101,196);
    }
    .bg-red {
    background: rgb(196,50,53);
    }
    .state1 {
        display: none;
    }
    .state2 {
        display: initial;
    }
    .form-right {
        width: 29%;
        float: right;
        height: 100%
    }
    .form-left {
        width: 69%;
        float: left;
        height: 100%
    }
    textarea {
        resize: none;
    }
    .container {
        overflow: hidden
    }
    </style>
</head>
<body>
    <div class="container h-100">
        <div class="row justify-content-center align-content-center h-100">
            <div class="col mtsm-6">
                <div class="text-center">
                    <h1>TEAM 1</h1>
                </div>
                <div class="container">
                    <canvas class="form-left" id="team1player1_canvas"></canvas>
                    <textarea class="form-right" id="team1player1_text" rows="1"></textarea>
                    <button id="team1player1_set" onclick="setPlayer(1,1)">SET</button>
                    <button id="team1player1_reset">RESET</button>
                </div>
                <div class="container">
                    <canvas class="form-left" id="team1player2_canvas"></canvas>
                    <textarea class="form-right" id="team1player2_text" rows="1"></textarea>
                    <button class="btn btn-dark" id="team1player2_set" onclick="setPlayer(1,2)">SET</button>
                    <button class="btn btn-dark" id="team1player2_reset">RESET</button>
                </div>
                <div class="container">
                    <canvas class="form-left" id="team1player3_canvas"></canvas>
                    <textarea class="form-right" id="team1player3_text" rows="1"></textarea>
                    <button id="team1player3_set" onclick="setPlayer(1,3)">SET</button>
                    <button id="team1player3_reset">RESET</button>
                </div>
                <div class="container">
                    <canvas class="form-left" id="team1player4_canvas"></canvas>
                    <textarea class="form-right" id="team1player4_text" rows="1"></textarea>
                    <button id="team1player4_set" onclick="setPlayer(1,4)">SET</button>
                    <button id="team1player4_reset">RESET</button>
                </div>
                <div class="container">
                    <canvas class="form-left" id="team1player5_canvas"></canvas>
                    <textarea class="form-right" id="team1player5_text" rows="1"></textarea>
                    <button id="team1player5_set" onclick="setPlayer(1,5)">SET</button>
                    <button id="team1player5_reset">RESET</button>
                </div>
            </div>
            <div class="col">
                <div class="text-center">
                    <h1>TEAM 2</h1>
                </div>
                <div>
                    <canvas id="team2player1"></canvas>
                </div>
                <div>
                    <canvas id="team2player2"></canvas>
                </div>
                <div>
                    <canvas id="team2player3"></canvas>
                </div>
                <div>
                    <canvas id="team2player4"></canvas>
                </div>
                <div>
                    <canvas id="team2player5"></canvas>
                </div>
            </div>
        </div>
    </div>
    
</body>
</html>